{
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.Hosting.Lifetime": "Information",
                "BIDashboardBackend.Features.Jobs.EtlJob": "Debug",
                "BIDashboardBackend.Services.MetricService": "Debug",
                "BIDashboardBackend.Repositories.MetricRepository": "Debug"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/bidashboard-.log",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 7,
                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u3}] {SourceContext}: {Message:lj} {Properties:j}{NewLine}{Exception}"
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
    },
    "AllowedHosts": "*",
    "Cache": {
        "KeyPrefix": "bi:"
    },
    "Redis": {
        "ConnectionString": "localhost:6379",
        "KeyPrefix": "bi"
    },
    "JwtSettings": {
        "SecretKey": "tV0DqTczF+5m84MC5lP72u9r1XjWZzXbT7c6IwxE8Uo=",
        "Issuer": "BISDashboard",
        "Audience": "your-clients",
        "AccessTokenExpirationMinutes": 60,
        "RefreshTokenExpirationDays": 7
    },
    "ConnectionStrings": {
        "Pg": "Host=localhost;Port=5432;Database=bidb;Username=admin;Password=admin123;Pooling=true;Minimum Pool Size=0;Maximum Pool Size=50"
    }

}
